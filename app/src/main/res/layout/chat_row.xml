<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/chat_row"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/back"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:gravity="start"
        android:id="@+id/chat_wrapper"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="25sp"
            android:id="@+id/senderImage"
            android:layout_alignBottom="@+id/wrapper"
            android:layout_marginRight="10sp"
            android:layout_height="25sp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/wrapper"
            android:layout_toRightOf="@+id/senderImage"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/chat_msg"

                android:maxWidth="300sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:background="@drawable/sender_message"
                android:padding="15sp"
                android:text="Ki Hal a Theek o Naaaa"
                android:textColor="@android:color/black"/>

            <ImageView
                android:id="@+id/chat_image"
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:background="@drawable/sender_message"
                android:padding="2sp"
                android:scaleType="centerCrop" />
        </RelativeLayout>
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:id="@+id/likeMessage"
            android:src="@drawable/like_icon"
            android:layout_alignRight="@+id/wrapper"
            android:layout_alignBottom="@+id/wrapper"
            android:layout_marginRight="10sp"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:21 pm"
            android:layout_marginTop="5sp"
            android:layout_alignLeft="@+id/wrapper"
            android:layout_below="@+id/wrapper"
            android:id="@+id/messageTime"
            />

    </RelativeLayout>

</RelativeLayout>